<h1>Books</h1>

<table>
<thead>


  <tr>
    <th>Title</th>
    <th>Body</th>
    <th></th>

  </tr>
</thead>
<tbody>
<% @books.each do |book| %>
  <tr>
    <td>　<%= book.title %></td>
    <td>　<%= book.body %></td>
    <td><%= link_to 'Show', book_path(book) %></td>
    <td><%= link_to 'Edit', edit_book_path(book) %></td>
    <td><%= link_to 'Destroy', book_path(book), method: :delete, data: {confirm: "Are you sure?"} %></td>
  </tr>
<% end %>
</tbody>
</table>


<h2>New book</h2>
<%= form_for @book, url: books_path do |book| %>
　<% if @book.errors.any? %>
   <%= @book.errors.count %> errors prohibited this book from being saved:<br>
   <ul>
   <% @book.errors.full_messages.each do |message| %>
     <%= message %><br>
　 <% end %>
   </ul>
　<% end %>

  <p>Title</p>
  <%= book.text_field :title %>
  <p>Body</p>
  <%= book.text_area :body %><br>
  <%= book.submit 'Create Book' %>

<% end %>